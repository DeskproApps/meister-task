{
  "name": "@deskpro-apps/meister-task",
  "title": "MeisterTask",
  "description": "",
  "version": "0.0.2",
  "scope": "agent",
  "isSingleInstall": false,
  "hasDevMode": true,
  "targets": [{ "target": "ticket_sidebar", "entrypoint": "index.html" }],
  "entityAssociations": {
    "linkedMeisterTask": {
      "title": "Linked MeisterTask Task",
      "entity": "ticket",
      "type": "external_id"
    }
  },
  "settings": {
    "client_id": {
      "title": "Client ID",
      "type": "string",
      "isRequired": true,
      "isBackendOnly": false,
      "order": 10
    },
    "client_secret": {
      "title": "Client Secret",
      "type": "string",
      "isRequired": true,
      "isBackendOnly": true,
      "order": 20
    },
    "callback_url": {
      "title": "Callback URL",
      "type": "app_embedded",
      "options": { "entrypoint": "#/admin/callback" },
      "isRequired": false,
      "isBackendOnly": true,
      "order": 30
    }
  },
  "proxy": {
    "whitelist": [
      {
        "url": "https://www.mindmeister.com/oauth2/.*",
        "methods": ["POST"],
        "timeout": 20
      },
      {
        "url": "https://www.meistertask.com/api/.*",
        "methods": ["GET", "POST", "PUT", "DELETE"],
        "timeout": 20
      }
    ]
  }
}
